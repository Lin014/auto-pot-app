<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_plant.history">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/text_h2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="歷史紀錄"
            android:textColor="@color/blue_dark"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/linearlayout_record_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TableLayout
                android:id="@+id/table_record_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/data_1"
                        android:gravity="left"
                        android:text="第一筆"
                        android:textColor="@color/blue_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_2"
                        android:gravity="left"
                        android:text="第二筆"
                        android:textColor="@color/blue_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_1_time"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_2_time"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_1_soil"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_2_soil"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_1_light"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_2_light"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_1_water"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_2_water"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/data_3"
                        android:gravity="center|left"
                        android:text="第三筆"
                        android:textColor="@color/blue_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data_4"
                        android:gravity="left"
                        android:text="第四筆"
                        android:textColor="@color/blue_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_3_time"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_4_time"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_3_soil"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_4_soil"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_3_light"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_4_light"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/data_3_water"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/data_4_water"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_dark"
                        android:textSize="14sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="#8CB3BD"
            android:text="history"
            android:textColor="@color/white" />

    </LinearLayout>
</FrameLayout>