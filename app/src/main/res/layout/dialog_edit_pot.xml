<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/round_layout">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="編輯"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ECF3FA"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/pot_set_area"
            android:gravity="center">

            <ImageButton
                android:id="@+id/editPotNameBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00000000"
                android:contentDescription="Edit Button"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_pot_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盆栽名稱"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/pot_set_area"
            android:layout_marginStart="10dp">

            <ImageButton
                android:id="@+id/editPlantNameBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00000000"
                android:contentDescription="Edit Button"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_plant_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="植物名稱"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/pot_set_area"
            android:layout_marginStart="10dp">

            <ImageButton
                android:id="@+id/editPlantImgBtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#00000000"
                android:contentDescription="Edit Button"
                android:scaleType="fitCenter"
                android:src="@drawable/edit_plant_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="植物照片"
                android:textColor="@color/blue_dark"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="關閉"
        android:background="@drawable/positive_btn_layout"
        android:textColor="@drawable/positive_btn_text"/>


</LinearLayout>